{
    "name": "mir-glas",
    "authors": ["Ilya Yaroshenko"],
    "copyright": "Copyright Â© 2016-, Ilya Yaroshenko",
    "buildTypes": {
        "target-native": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-mcpu=native", "-linkonce-templates"]
        },
        "target-default": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-linkonce-templates"]
        },
    },
    "configurations": [
        {
            "name": "header",
            "targetType": "sourceLibrary",
            "sourceFiles": ["glas/common.d", "glas/package.d", "glas/fortran.d"],
        },
        {
            "name": "static",
            "targetType": "staticLibrary",
            "sourcePaths": ["glas/precompiled"]
        },
        {
            "name": "dynamic",
            "targetType": "dynamicLibrary",
            "sourcePaths": ["glas/precompiled"]
        }
    ],
}
