{
    "name": "mir-glas",
    "buildTypes": {
        "native": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-mcpu=native", "-linkonce-templates"]
        },
        "release-native": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-mcpu=native", "-linkonce-templates"]
        },
        "plain": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-linkonce-templates"]
        },
        "release": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-linkonce-templates"]
        },
        "release-nobounds": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-linkonce-templates"]
        },
        "release-debug": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-linkonce-templates"]
        },
        "debug": {
            "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
            "dflags-ldc": ["-linkonce-templates"]
        }
    },
    "configurations": [
        {
            "name": "static",
            "targetType": "staticLibrary",
        },
        {
            "name": "dynamic",
            "targetType": "dynamicLibrary",
        }
    ],
    "dependencies": {
        "mir": "~>0.20.2",
        "mir-cpuid": "~>0.4.1"
    },
    "importPaths": ["./", "../source"],
    "sourcePaths": ["./"],
    "excludedSourceFiles": ["glas/precompiled/l3.d", "glas/precompiled/l3_.d"],
    "buildOptions": ["noBoundsCheck", "releaseMode", "optimize", "inline"],
    "dflags-ldc": ["-linkonce-templates"]
}
